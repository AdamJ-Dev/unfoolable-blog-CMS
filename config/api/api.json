{
  "baseDevUrl": "http://localhost:3001",
  "baseProdUrl": "https://unfoolable-blog-api.herokuapp.com",
  "routes": {
    "auth": {
      "findUser": "/user/:id",
      "login": "/user/login",
      "signup": "/user/signup"
    },
    "blogs": {
      "findAllBlogs": "/blogs",
      "findPublishedBlogs": "/blogs/public",
      "findBlogDrafts": "/blogs/drafts",
      "findBlogTags": "/blogs/tags",
      "findBlog": "/blog/:path",
      "createBlog": "/blog/create",
      "updateBlog": "/blog/:id",
      "deleteBlog": "/blog/:id"
    },
    "comments": {
      "findAllComments": "/comments",
      "findBlogsComments": "/blog/:blog_id/comments",
      "findComment": "/comment/:id",
      "createComment": "/comment/create",
      "createUserComment": "/comment/user/create",
      "createAdminComment": "/comment/admin/create",
      "updateComment": "/comment/:id",
      "deleteComment": "/comment/:id"
    }
  }
}
